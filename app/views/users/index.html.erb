<h1 class="pull-left">Users</h1>

<div class="create">
  <%= link_to 'Create a New User', new_user_path, class: 'btn btn-primary' %>
</div>

<table class="table users">
  <thead>
    <tr>
      <th> </th>
      <th class="num">Ratings</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user do %>
            <%= image_tag user.picture(:thumb) if user.picture %>
            <%= user.name %>
          <% end %>
        </td>
        <td class="num">
          <%= user.ratings.count %>
        </td>
        <td>
          <%= link_to 'Edit', edit_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>
